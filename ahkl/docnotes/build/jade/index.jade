doctype html
html(lang='en')
	head
		title='DocNotes | Smart dashboard for hospitals'
		meta(charset='utf-8')
		meta(content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, minimal-ui', name='viewport')
		meta(content='yes', name='mobile-web-app-capable')
		meta(content='IE=edge', http-equiv='X-UA-Compatible')

		meta(content='DocNotes | Smart dashboard for hospitals', name='title')
		meta(content='Smart dashboard for hospitals to communicate efficient patient data between doctors and nurses to reduce human errors.', name='description')

		meta(content='DocNotes | Smart dashboard for hospitals', property='og:title')
		meta(content='Smart dashboard for hospitals to communicate efficient patient data between doctors and nurses to reduce human errors.', property='og:description')
		meta(content='website', property='og:type')
		meta(content='http://docnotes.com', property='og:url')

		// Twitter
		meta(content='DocNotes | Smart dashboard for hospitals', name='twitter:site')
		meta(content='DocNotes | Smart dashboard for hospitals', name='twitter:title')
		meta(content='Smart dashboard for hospitals to communicate efficient patient data between doctors and nurses to reduce human errors.', name='twitter:description')
		meta(content='summary', name='twitter:card')

		link(href='images/logo.png', rel='icon', type='image/png')
		link(href='css/style.css', rel='stylesheet', type='text/css')

	body
		nav
			a(class='logo' href='#')
				img(src='images/logo@2x.png', rel='DocNotes logo', width='60')
			.menu
				a.icon.icon--ambulance.active(href='#') Patients
				a.icon.icon--emergencies(href='#') Emergencies
				a.icon.icon--history(href='#') History
				a.icon.icon--help(href='#') Help Center

		section
			.header
				.wrap.float--right
					a(class='btn  btn--add' href='#')
						span.plus +
						span Add patient
					.float--right
						a(class='icon icon--notification' href='#') Notification
						a(class='icon icon--calendar' href='#') Calendar
						a(class='icon icon--off' href='#') Log out

			.content--info
				.client.float--left
					p Hospital
					img(src='images/hospital.png', rel='Gleneagles hospital', width='150')

				.ward.float--right
					p Ward
					select(name='select')
						option(value='value 1') value 1
						option(value='value 2') value 2
						option(value='value 3') value 3

			.content--summary
				.summary
					.number 47
					.title Patients in ward
					.divider
					.gallery
						img(src='images/patient_one.png', alt='Patient', width='42')
						img(src='images/patient_two.png', alt='Patient', width='42')
						img(src='images/patient_three.png', alt='Patient', width='42')

				.summary
					.number 4
					.title Emergencies
					.divider
					.gallery
						img(src='images/patient_one.png', alt='Patient', width='42')
						img(src='images/patient_two.png', alt='Patient', width='42')
						img(src='images/patient_three.png', alt='Patient', width='42')

				.summary
					.number 14
					.title Discharged
						span (Last week)
					.divider
					.gallery
						img(src='images/patient_one.png', alt='Patient', width='42')
						img(src='images/patient_two.png', alt='Patient', width='42')
						img(src='images/patient_three.png', alt='Patient', width='42')

			.content--filters
				.search.float--left
					p Search
					input(type='search', value='search', name='Search')

				.sort.float--right
					p Sort by
					select(name='select')
						option(value='value 1') value 1
						option(value='value 2') value 2
						option(value='value 3') value 3

			.content--tables
				table(width='100%')
					tr
						th No
						th Patient name
